@model FinansalYonetimWebUygulamasi.Models.TransactionHistoryViewModel

<h2>Harcamaların Geçmişi</h2>

<form asp-action="History" method="get" class="form-inline mb-3">
    <div class="form-group mr-2">
        <label asp-for="SelectedCategory" class="mr-2">Kategori:</label>
        <select asp-for="SelectedCategory" class="form-control" asp-items="@(new SelectList(Model.Categories, Model.SelectedCategory))">
            <option value=""></option>
        </select>
    </div>
    <div class="form-group mr-2">
        <label asp-for="StartDate" class="mr-2">Başlangıç Tarihi:</label>
        <input asp-for="StartDate" class="form-control" type="date" />
    </div>
    <div class="form-group mr-2">
        <label asp-for="EndDate" class="mr-2">Bitiş Tarihi:</label>
        <input asp-for="EndDate" class="form-control" type="date" />
    </div>
    <button type="submit" class="btn btn-primary">Filtrele</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Açıklama</th>
            <th>Miktar</th>
            <th>Tarih</th>
            <th>Kategori</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model.Transactions)
        {
            <tr>
                <td>@transaction.Description</td>
                <td>@transaction.Amount</td>
                <td>@transaction.Date.ToString("dd/MM/yyyy")</td>
                <td>@transaction.Category</td>
            </tr>
        }
    </tbody>
</table>
