@model FinansalYonetimWebUygulamasi.Models.TransactionHistoryViewModel

<div class="history-container">
    <h2>Harcamaların Geçmişi</h2>

    <form asp-action="History" method="get" class="form-inline mb-3">
        <div class="form-group mr-2">
            <label asp-for="SelectedCategory" class="mr-2">Kategori:</label>
            <select asp-for="SelectedCategory" class="form-control" asp-items="@(new SelectList(Model.Categories, Model.SelectedCategory))">
                <option></option>
            </select>
        </div>
        <div class="form-group mr-2">
            <label asp-for="StartDate" class="mr-2">Başlangıç Tarihi:</label>
            <input asp-for="StartDate" class="form-control" type="date" />
        </div>
        <div class="form-group mr-2">
            <label asp-for="EndDate" class="mr-2">Bitiş Tarihi:</label>
            <input asp-for="EndDate" class="form-control" type="date" />
        </div>
        <button type="submit" class="btn btn-primary">Filtrele</button>
    </form>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Açıklama</th>
                <th>Miktar</th>
                <th>Tarih</th>
                <th>Kategori</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transaction in Model.Transactions)
            {
                <tr>
                    <td>@transaction.Description</td>
                    <td>@transaction.Amount</td>
                    <td>@transaction.Date.ToString("dd/MM/yyyy")</td>
                    <td>@transaction.Category</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .history-container {
        padding: 2rem;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .history-container h2 {
            text-align: center;
            margin-bottom: 1.5rem;
        }

    .form-inline {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .form-control {
        width: 100%;
        max-width: 200px;
        padding: 0.5rem;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .table {
        width: 100%;
        margin-bottom: 1rem;
        color: #343a40;
        border-collapse: collapse;
        text-align: center;
    }

        .table th,
        .table td {
            padding: 0.75rem;
            vertical-align: middle;
            border-top: 1px solid #dee2e6;
        }

        .table thead th {
            vertical-align: middle;
            border-bottom: 2px solid #dee2e6;
        }

        .table tbody + tbody {
            border-top: 2px solid #dee2e6;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, 0.05);
    }

    .btn {
        cursor: pointer;
        display: inline-block;
        font-weight: 400;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        user-select: none;
        border: 1px solid transparent;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        line-height: 1.5;
        border-radius: 0.25rem;
        min-width: 5rem;
    }

    .btn-primary {
        background-color: #006748;
        border-color: #00573f;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #00573f;
            border-color: #004d3b;
        }
</style>
