@model EntityLayer.Concrete.Transaction

<h2>Masraf Sil</h2>
<h3>Bu masrafı silmek istediğinizden emin misiniz?</h3>
<div>
    <h4>Masraf</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Açıklama</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Miktar</dt>
        <dd class="col-sm-10">@Model.Amount</dd>

        <dt class="col-sm-2">Tarih</dt>
        <dd class="col-sm-10">@Model.Date.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Kategori</dt>
        <dd class="col-sm-10">@Model.Category</dd>
    </dl>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a href="@Url.Action("Index")" class="btn btn-secondary">Listeye Geri Dön</a>
    </div>
</form>
