@model EntityLayer.Concrete.Transaction

<div class="delete-container">
    <h2>Masraf Sil</h2>
    <h3>Bu masrafı silmek istediğinizden emin misiniz?</h3>
    <div class="delete-content">
        <h4>Masraf</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Açıklama</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Miktar</dt>
            <dd class="col-sm-9">@Model.Amount</dd>

            <dt class="col-sm-3">Tarih</dt>
            <dd class="col-sm-9">@Model.Date.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Kategori</dt>
            <dd class="col-sm-9">@Model.Category</dd>
        </dl>
    </div>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="delete-actions">
            <input type="submit" value="Sil" class="btn btn-danger" />
            <a href="@Url.Action("Index")" class="btn btn-secondary">Listeye Geri Dön</a>
        </div>
    </form>
</div>

<style>
    .delete-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 2rem;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .delete-container h2, .delete-container h3 {
            text-align: center;
            margin-bottom: 1rem;
        }

    .delete-content {
        margin-bottom: 1.5rem;
    }

    .delete-actions {
        display: flex;
        justify-content: space-between;
    }

    .btn {
        width: 48%;
        cursor: pointer;
        display: inline-block;
        font-weight: 400;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        user-select: none;
        border: 1px solid transparent;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        line-height: 1.5;
        border-radius: 0.25rem;
        min-width: 5rem;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #bd2130;
        color: #fff;
    }

        .btn-danger:hover {
            background-color: #bd2130;
            border-color: #a71d2a;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #5a6268;
        color: #fff;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }
</style>
