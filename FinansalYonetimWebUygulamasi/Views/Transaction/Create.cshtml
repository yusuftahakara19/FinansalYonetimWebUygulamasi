@model FinansalYonetimWebUygulamasi.Models.TransactionViewModel

<div class="create-container">
    <h2>Masraf Ekle</h2>
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Description" class="control-label">Açıklama</label>
            <input asp-for="Description" class="form-control" placeholder="Açıklamayı girin" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Amount" class="control-label">Miktar</label>
            <input asp-for="Amount" class="form-control" placeholder="Miktarı girin" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Date" class="control-label">Tarih</label>
            <input asp-for="Date" class="form-control" type="date" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Category" class="control-label">Kategori</label>
            <select asp-for="Category" class="form-control" asp-items="@(new SelectList(Model.Categories))"></select>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
        <div class="create-actions">
            <button type="submit" class="btn btn-success">Kaydet</button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Listeye Dön</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .create-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 2rem;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .create-container h2 {
            text-align: center;
            margin-bottom: 1.5rem;
        }

    .form-group {
        margin-bottom: 1rem;
    }

    .form-control {
        width: 100%;
        padding: 0.5rem;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .create-actions {
        display: flex;
        justify-content: space-between;
    }

    .btn {
        width: 48%;
        cursor: pointer;
        display: inline-block;
        font-weight: 400;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        user-select: none;
        border: 1px solid transparent;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        line-height: 1.5;
        border-radius: 0.25rem;
        min-width: 5rem;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #218838;
        color: #fff;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #5a6268;
        color: #fff;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    .text-danger {
        color: #dc3545;
    }
</style>
