@model FinansalYonetimWebUygulamasi.Models.TransferViewModel

<h2>Yeni Transfer</h2>

@if (ViewBag.Errors != null)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewBag.Errors)
            {
                <li>@error</li>
            }
        </ul>
    </div>
}

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="SenderAccountId" class="control-label">Gönderen Hesap</label>
        <select asp-for="SenderAccountId" class="form-control">
            <option value="">Seçiniz...</option>
            @foreach (var account in Model.SenderAccounts)
            {
                <option value="@account.Id">@account.AccountName (Bakiye: @account.Balance)</option>
            }
        </select>
        <span asp-validation-for="SenderAccountId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RecipientAccountId" class="control-label">Alıcı Hesap</label>
        <select asp-for="RecipientAccountId" class="form-control">
            <option value="">Seçiniz...</option>
            @foreach (var account in Model.RecipientAccounts)
            {
                <option value="@account.Id">@account.AccountName (Kullanıcı: @account.UserId)</option>
            }
        </select>
        <span asp-validation-for="RecipientAccountId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Amount" class="control-label"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date" class="control-label"></label>
        <input asp-for="Date" class="form-control" type="date" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
