@model FinansalYonetimWebUygulamasi.Models.TransferIndexViewModel

<div class="index-container">
    <h2>Para Transferleri</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Gönderen/Alıcı</th>
                <th>Miktar</th>
                <th>Tarih</th>
                <th>Açıklama</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var transfer in Model.SentTransfers)
            {
                <tr>
                    <td>@transfer.RecipientUserId (Alıcı)</td>
                    <td>@transfer.Amount</td>
                    <td>@transfer.Date.ToString("dd/MM/yyyy")</td>
                    <td>@transfer.Description</td>
                </tr>
            }
            @foreach (var transfer in Model.ReceivedTransfers)
            {
                <tr>
                    <td>@transfer.SenderUserId (Gönderen)</td>
                    <td>@transfer.Amount</td>
                    <td>@transfer.Date.ToString("dd/MM/yyyy")</td>
                    <td>@transfer.Description</td>
                </tr>
            }
        </tbody>
    </table>
    <a href="@Url.Action("Create")" class="btn btn-success">Yeni Transfer</a>
</div>

<style>
    .index-container {
        padding: 2rem;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .index-container h2 {
            text-align: center;
            margin-bottom: 1.5rem;
        }

    .table {
        width: 100%;
        margin-bottom: 1rem;
        color: #343a40;
        border-collapse: collapse;
        text-align: center;
    }

        .table th,
        .table td {
            padding: 0.75rem;
            vertical-align: middle;
            border-top: 1px solid #dee2e6;
        }

        .table thead th {
            vertical-align: middle;
            border-bottom: 2px solid #dee2e6;
        }

        .table tbody + tbody {
            border-top: 2px solid #dee2e6;
        }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(0, 0, 0, 0.05);
    }

    .btn {
        cursor: pointer;
        display: inline-block;
        font-weight: 400;
        text-align: center;
        white-space: nowrap;
        vertical-align: middle;
        user-select: none;
        border: 1px solid transparent;
        padding: 0.375rem 0.75rem;
        font-size: 1rem;
        line-height: 1.5;
        border-radius: 0.25rem;
        min-width: 5rem;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #218838;
        color: #fff;
    }

        .btn-success:hover {
            background-color: #218838;
            border-color: #1e7e34;
        }
</style>
